{
  "log": {
    "level": "error",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "dns-direct",
        "address": "https://dns.adguard-dns.com/dns-query",
        "address_resolver": "dns-resolver"
      },
      {
        "tag": "fakeip-dns",
        "address": "fakeip"
      },
      {
        "tag": "dns-resolver",
        "address": "8.8.8.8"
      }
    ],
    "rules": [
      {
        "type": "logical",
        "mode": "or",
        "rules": [
          {
            "clash_mode": "Direct"
          },
          {
            "outbound": "any"
          }
        ],
        "server": "dns-direct"
      },
      {
        "type": "logical",
        "mode": "or",
        "rules": [
          {
            "query_type": "A",
            "clash_mode": "Global"
          },
          {
            "query_type": "A",
            "rule_set": "my-ruleset"
          }
        ],
        "server": "fakeip-dns"
      }
    ],
    "fakeip": {
      "enabled": true,
      "inet4_range": "198.18.0.0/15"
    },
    "strategy": "ipv4_only"
  },
  "inbounds": [
    {
      "type": "tun",
      "tag": "tunin",
      "interface_name": "sbtun",
      "mtu": 1500,
      "address": "172.19.0.1/28"
    },
    {
      "type": "direct",
      "tag": "dns4tunin",
      "listen": "0.0.0.0",
      "listen_port": 55553,
      "override_port": 5553
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "vless",
      "tag": "My-VLESS",
      "server": "XXXXXXXXXXX",
      "server_port": 443,
      "uuid": "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
      "flow": "xtls-rprx-vision",
      "tls": {
        "enabled": true,
        "server_name": "XXXXXXXXXX",
        "utls": {
          "enabled": true,
          "fingerprint": "XXXXXX"
        },
        "reality": {
          "enabled": true,
          "public_key": "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
          "short_id": "XXXXXXXXX"
        }
      }
    }
  ],
  "route": {
    "rules": [
      {
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "clash_mode": "Direct",
        "outbound": "direct"
      },
      {
        "type": "logical",
        "mode": "or",
        "rules": [
          {
            "clash_mode": "Global"
          },
          {
            "rule_set": "my-ruleset"
          }
        ],
        "outbound": "My-VLESS"
      }
    ],
    "rule_set": [
      {
        "type": "remote",
        "tag": "my-ruleset",
        "format": "binary",
        "url": "https://github.com/Dr4tez/my_domains/raw/main/my_domains.srs",
        "download_detour": "My-VLESS"
      }
    ]
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/opt/root/sing-box/cache.db",
      "store_fakeip": true
    },
    "clash_api": {
      "external_controller": "0.0.0.0:9090",
      "external_ui": "/opt/root/sing-box/ui",
      "secret": "1809"
    }
  }
}
