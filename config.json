{
  "log": {
    "level": "error",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "dns-direct",
        "address": "https://dns.google/dns-query",
        "address_resolver": "dns-resolver"
      },
      {
        "tag": "dns-remote",
        "address": "https://dns.google/dns-query",
        "address_resolver": "dns-resolver",
        "detour": "My-VLESS"
      },
      {
        "tag": "dns-resolver",
        "address": "8.8.8.8"
      }
    ],
    "rules": [
      {
        "outbound": "any",
        "server": "dns-direct"
      },
      {
        "rule_set": "my-ruleset",
        "server": "dns-remote"
      }
    ],
    "strategy": "ipv4_only",
    "reverse_mapping": true,
    "independent_cache": true
  },
  "inbounds": [
    {
      "type": "tproxy",
      "listen": "0.0.0.0",
      "listen_port": 6543
    },
    {
      "type": "direct",
      "tag": "dns4tunin",
      "listen": "0.0.0.0",
      "listen_port": 55553,
      "override_port": 5553
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "vless",
      "tag": "My-VLESS",
      "server": "XXXXXXXXXXX",
      "server_port": 443,
      "uuid": "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
      "flow": "xtls-rprx-vision",
      "tls": {
        "enabled": true,
        "server_name": "XXXXXXXXXX",
        "utls": {
          "enabled": true,
          "fingerprint": "XXXXXX"
        },
        "reality": {
          "enabled": true,
          "public_key": "XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
          "short_id": "XXXXXXXXX"
        }
      }
    }
  ],
  "route": {
    "rules": [
      {
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "rule_set": "my-ruleset",
        "outbound": "My-VLESS"
      }
    ],
    "rule_set": [
      {
        "type": "remote",
        "tag": "my-ruleset",
        "format": "binary",
        "url": "https://github.com/Dr4tez/my_domains/raw/main/my_domains.srs"
      }
    ]
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/opt/root/sing-box/cache.db"
    }
  }
}
