# !!! This script is for updating ONLY ru and test versions 1.7 to version 1.8 !!!

rm -f /jffs/addons/sing-box-script/update_ru_test_1.7_to_1.8

sbs stop &

sleep 10

rm -f /jffs/addons/sing-box-script/sbs-ru
